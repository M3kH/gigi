{
  "name": "gigi",
  "version": "0.1.0",
  "description": "Persistent AI coordinator for the TuringPi cluster",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "start": "node --import tsx src/index.ts",
    "dev": "vite --config vite.config.ts",
    "dev:server": "node --import tsx --watch src/index.ts",
    "build": "vite build --config vite.config.ts",
    "typecheck": "tsc --noEmit",
    "test": "node --test tests/**/*.test.js src/**/*.test.js",
    "test:watch": "node --test --watch tests/**/*.test.js src/**/*.test.js",
    "test:ci": "node scripts/test-runner.js"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.0",
    "@hono/node-server": "^1.14.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "grammy": "^1.35.0",
    "hono": "^4.7.0",
    "pg": "^8.13.0",
    "playwright": "^1.41.0",
    "sharp": "^0.33.2",
    "ws": "^8.16.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/pg": "^8.11.0",
    "@types/ws": "^8.5.0",
    "tsx": "^4.21.0",
    "typescript": "^5.7.0",
    "vite": "^6.1.0"
  },
  "engines": {
    "node": ">=20"
  },
  "license": "GPL-2.0"
}
