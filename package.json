{
  "name": "gigi",
  "version": "0.1.0",
  "description": "Persistent AI coordinator for the TuringPi cluster",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "start": "node --import tsx src/index.ts",
    "dev": "npm run dev:server & npm run dev:vite",
    "dev:vite": "vite --config vite.config.ts",
    "dev:server": "node --import tsx --watch src/index.ts",
    "build": "vite build --config vite.config.ts",
    "typecheck": "tsc --noEmit",
    "test": "node --import tsx --test tests/**/*.test.ts tests/**/*.test.js src/**/*.test.js",
    "test:watch": "node --import tsx --test --watch tests/**/*.test.ts tests/**/*.test.js src/**/*.test.js",
    "test:integration": "TEST_DATABASE_URL=${TEST_DATABASE_URL:-postgresql://gigi_test:gigi_test@postgres:5432/gigi_test} node --import tsx --test --test-concurrency 1 tests/integration/*.integration.test.ts",
    "pretest:integration": "bash scripts/backup-db.sh",
    "test:ci": "node scripts/test-runner.js"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.44",
    "@hono/node-server": "^1.14.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@shoelace-style/shoelace": "^2.20.1",
    "chrome-devtools-mcp": "^0.17.0",
    "dompurify": "^3.3.1",
    "grammy": "^1.35.0",
    "highlight.js": "^11.11.1",
    "hono": "^4.7.0",
    "marked": "^17.0.2",
    "pg": "^8.13.0",
    "pixelarticons": "^1.8.1",
    "playwright": "^1.41.0",
    "sharp": "^0.33.2",
    "svelte": "^5.51.0",
    "ws": "^8.16.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "@types/dompurify": "^3.0.5",
    "@types/node": "^20.0.0",
    "@types/pg": "^8.11.0",
    "@types/ws": "^8.5.0",
    "msw": "^2.12.10",
    "svelte-check": "^4.4.0",
    "tsx": "^4.21.0",
    "typescript": "^5.7.0",
    "vite": "^6.1.0"
  },
  "engines": {
    "node": ">=20"
  },
  "license": "GPL-2.0"
}
