{
  "mcpServers": {
    "gigi-tools": {
      "type": "stdio",
      "command": "node",
      "args": ["--import", "tsx", "lib/core/mcp.ts"],
      "env": {
        "DATABASE_URL": "${DATABASE_URL}",
        "GITEA_URL": "${GITEA_URL}",
        "GITEA_TOKEN": "${GITEA_TOKEN}",
        "PORT": "${PORT}"
      }
    },
    "chrome-devtools": {
      "type": "stdio",
      "command": "node",
      "args": ["node_modules/.bin/chrome-devtools-mcp", "--browserUrl", "${CHROME_CDP_URL}", "--no-usage-statistics"]
    }
  }
}
