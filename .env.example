# Docker Registry Configuration
REGISTRY=192.168.1.80:3000
IMAGE=idea/gigi
TAG=latest

# Database Configuration
DATABASE_URL=postgresql://gigi:password@postgres:5432/gigi

# Neko Browser Configuration
NEKO_PASSWORD=neko
NEKO_ADMIN_PASSWORD=admin
NEKO_SCREEN=1920x1080@30
# CRITICAL: Set this to the external IP/hostname where neko is accessible for WebRTC
NEKO_NAT1TO1=192.168.1.80

# Browser Mode Configuration
BROWSER_MODE=neko

# Vite Dev Proxy (for local frontend development)
# Point these to the live Gigi app to develop against real data
# GIGI_API_URL=http://192.168.1.80:3100
# GIGI_WS_URL=ws://192.168.1.80:3101